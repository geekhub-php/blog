{% block nav %}
    <div id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><button class="close" type="button" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Sign-in</h4>
                    {{ render(controller('AppBundle:User:authorization')) }}
                </div>
            </div>
        </div>
    </div>
    <div id="myModal2" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><button class="close" type="button" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Sign-Up</h4>
                    {{ render(controller('AppBundle:User:new')) }}
                </div>
            </div>
        </div>
    </div>
    <div id="topo">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-ms-6 col-xs-6" id="logo-topo">
                    <div class="col-sm-5 col-md-5">
                        <form class="navbar-form" role="search" action="{{ path('search') }}">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search" name="q">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <a href="{{ path('homepage') }}"><img src="{{ asset('includes/img/logo.png') }}"></a>
                </div>
                <div class="col-md-6 col-ms-6 col-xs-6" id="abre-menu-topo">
                    <a href="#" class="btn-collapse">
                        <div class="lista-collapse"></div>
                        <div class="lista-collapse"></div>
                        <div class="lista-collapse"></div>
                    </a>
                    <a style="margin-top: 20px" class="pull-right" href="#modal" role="button" data-toggle="modal" data-target="#myModal"><button class="btn btn-primary">Sign In</button></a>
                    <a style="margin-top: 20px" class="pull-right" href="#modal2" role="button" data-toggle="modal" data-target="#myModal2"><button class="btn btn-success">Sign Up</button></a>
                </div>
            </div>
            <div class="row">
                <ul id="menu-topo">
                    <li><a href="{{ path("homepage") }}">Home</a></li>
                    <li><a href="{{ path("about_me") }}">About me</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin Panel
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('check_comments') }}">Check comments</a></li>
                            <li><a href="{{ path('check_users') }}">Check users</a></li>
                            <li><a href="{{ path('new_article') }}">New article</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div><!--Fim da coontainer -->
    </div><!--Fim do topo -->
{% endblock nav %}