{% extends 'base.html.twig' %}

{% block main %}
<div class="col-lg-12 main">
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>email</th>
        </tr>

        {% for author in authors %}
            <tr>
                <td>{{ author.firstName }}</td>
                <td>{{ author.lastName }}</td>
                <td>{{ author.user.email }}</td>
            </tr>
        {% endfor %}

    </table>
</div>
{% endblock %}
