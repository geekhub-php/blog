    <div class="col-md-3 categories-and-top-block">
        <span class="label label-default spanMenyLeft">categories:</span>
        <div  id="idCategories">
            {% for key in categories %}



                <a href="{{ path('categories',{'id':key.id})}}">{{ key.name }}
                    <span class="badge">{{ key.count }}</span>{# {{ key["countPosts"] }}#}</a>
                <br>

            {% endfor %}
        </div>
        <span class="label label-default spanMenyLeft">top posts:</span>
        <div class="" id="idTopPost">
            <a href="{{ path('topRated')}}">top-rated</a>
            <br>
            <a href="{{ path('most_commented')}}">most commented</a>
        </div>
        <span class="label label-default spanMenyLeft">Could Tags:</span>
        <div class="" id="idCouldPost">
            {% for key in tags %}
               <a href="{{ path('tags',{'id':key.id})}}">{{ key.name }}</a>
            {% endfor %}
        </div>

    </div>
