{% extends 'base.html.twig' %}

{% block main %}
<div class="col-lg-12 content">
    {% for article in articles %}
        <div class="card card-danger text-center col-md-11 col-md-offset-4 article">
            <img class="card-img-top" src="{{ asset(random(['img/om160617-133-318x160.jpg',
            'img/50708_1280x720-318x180.jpg'])) }}" alt="Card image cap">

            <div class="card-block col-sm-3 col-md-6">
                <h4 class="card-title">{{ article.title }}</h4>
                <p class="card-text">{{ article.content[:250] ~ '...' }}</p>
                <small>published by {{ article.author }}
                    on  {{ article.publishedAt|date('Y-m-d H:i') }}
                </small>
                <a class="btn btn-primary" href="{{ path('show_article', {'id':article.id}) }}">Read more!</a>
            </div>
        </div>
            {% endfor %}
</div>
{% endblock %}

