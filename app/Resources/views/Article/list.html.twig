{% extends 'base.html.twig' %}

{% block main %}
<div class="col-lg-12 content">
    {% for article in articles %}
        <div class="main">
            <img src="{{ asset('img/') }}{{ article.image }}" alt="image">
            <a class="btn btn-default" href="{{ path('show_article', {'id':article.id}) }}">Read more!</a>
            <div class="col-sm-3 col-md-6">
                <h4>{{ article.title }}</h4>
                <p>{{ article.content[:250] ~ '...' }}</p>
                <small>published by {{ article.author }}
                    on  {{ article.publishedAt|date('Y-m-d H:i') }}
                </small>

            </div>
        </div>
            {% endfor %}
</div>
{% endblock %}

