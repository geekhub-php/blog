<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    {% block title %}<title>Music Blog</title>{% endblock title %}

    {% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('css/base-template.css') }}" rel="stylesheet">
    {% endblock  stylesheets%}
    <link rel="icon" type="image/x-icon" href="{{ asset('image/music_logo.png') }}" />
</head>

<body>
{% block body %}

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Music Blog</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('allNews') }}">News</a></li>
                    <li><a class="dropdown-toggle" data-toggle="dropdown" href="#">Info</a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Rap</a></li>
                            <li><a href="#">Rock</a></li>
                            <li><a href="#">Dubstep</a></li>
                        </ul>
                    <li><a href="/Merch">Merch</a></li>
                    <li><a href="/about">About</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
{% block content %}
    <div class="container parent" align="center" >
        <img src="{{ asset('image/Logotype.png') }}">
    </div>
{% endblock content %}
{% block javascripts %}
<!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock javascripts %}
{% endblock body %}
</body>
</html>
