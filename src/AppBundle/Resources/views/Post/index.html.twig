{% extends 'AppBundle::base.html.twig' %}

{% block title %}{% endblock %}

 {% block content %}
     <div class="container-fluid">
         <div class="row">
             <div class="col-md-9">
                 {% for item in posts %}
                     <div class="row">
                         <div class="panel panel-default">
                             <div class="panel-heading panelHeading">
                                 <h3 class="panel-title"><a href="/post/{{ item.id }}">{{  item.title }}</a><span style="float: right">{{ item.datetime }}</span></h3>

                             </div>
                             <div class="panel-body">
                                 {{ item.text }}
                             </div>
                         </div>
                     </div>
                 {% endfor %}
             </div>
             {{ include('AppBundle::sidebar.html.twig') }}
         </div>
     </div>
 {% endblock %}