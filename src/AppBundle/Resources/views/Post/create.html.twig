{% extends 'BlogBundle::base.html.twig' %}

{% block title %}{% if status == 'create' %}Creating{% else %}Editing{% endif %} post{% endblock %}

{% block body %}
<div class="container-fluid mainWrapper">
    <div class="row">
        <div class="col-md-10 col-md-offset-1 myClass">
            <h1>Ugly Blog</h1>
            {{ include('BlogBundle::navbar.html.twig') }}
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="#">Post</a></li>
                <li class="active">{% if status == 'create' %}Create{% else %}Edit{% endif %}</li>
            </ol>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-9">
                        <div class="row">
                            {% if status == 'create' %}
                            <form method="POST" action="/post/create">
                                <input type="hidden" name="_method" value="PUT">
                                {% elseif status == 'edit' %}
                                    <form method="POST" action="/post/{{ id }}/edit">
                                        <input type="hidden" name="_method" value="PATCH">
                                        {% endif %}
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input type="text" class="form-control" id="title" placeholder="Title" name="title">
                                </div>
                                <div class="form-group">
                                    <label for="text">Text</label>
                                    <textarea class="form-control" rows="3" id="text" name="text"></textarea>
                                </div>
                                <button type="submit" class="btn btn-default">Submit</button>
                                </form>
                        </div>
                    </div>
                    {{ include('BlogBundle::sidebar.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



