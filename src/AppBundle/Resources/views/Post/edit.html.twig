{% extends 'AppBundle::base.html.twig' %}
{% block title %}Editing a new post{% endblock %}

{% block breadcrump %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/category/">Category</a></li>
        <li><a href="/category">Post</a></li>
        <li class="active">Edit</li>
    </ol>
{% endblock %}
 {% block content %}
     <div class="container-fluid">
         <div class="row">
             <div class="col-md-9">
                 <div class="row">
                     <div class="panel panel-default">
                         <div class="panel-heading panelHeading">
                             <h3 class="panel-title">Editing the post</h3>
                             {{ form_start(delete_form) }}
                             <button type="submit" class="btn btn-danger right">Delete</button>
                             {{ form_end(delete_form) }}
                         </div>
                         <div class="panel-body">
                             {% form_theme form 'AppBundle::form.html.twig' %}
                             {{ form_start(form) }}
                             {{ form_widget(form) }}
                             <button class="btn btn-default" type="submit">Edit</button>
                             {{ form_end(form) }}
                         </div>
                     </div>
                 </div>
             </div>
             {{ include('AppBundle::sidebar.html.twig') }}
         </div>
     </div>
 {% endblock %}