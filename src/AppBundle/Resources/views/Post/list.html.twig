{% extends "AppBundle:layouts:column-two.html.twig" %}

{% block title %}AppBundle:Blog:list{% endblock %}

{% block content %}
    <h3>Posts</h3>
    <hr>
    {% for post in posts %}
        <div><h4><a href="{{ path('postView', {'id': post.id}) }}">{{ post.title }}</a></h4></div>
        <div>{{ post.content }}</div>
        <div class="post-controls-container">
            <a href="{{ path('postEdit', {'id': post.id}) }}">Edit</a>&nbsp;
            <a href="{{ path('postDelete', {'id': post.id}) }}">Delete</a>
        </div>
    {% endfor %}
{% endblock content %}

