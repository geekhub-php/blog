
<div class="col-md-4 about-right heading">
    <div class="abt-2">
        <h3>YOU MIGHT ALSO LIKE</h3>
        {% for item in items %}
            <div class="might-grid">
                <div class="grid-might">
                    <a href="single.html"><img src="{{ asset(item.getImage) }}" class="img-responsive" alt="" style="max-width: 82px; height: 52px"> </a>
                </div>
                <div class="might-top">
                    <h4><a href="{{ path('id', {'id': item.getId }) }}">{{ item.title }}</a></h4>
                    <p>{{item.body[:300] ~ '...'}}</p>
                </div>
                <div class="clearfix"></div>
            </div>
        {% else %}
            <p>There are no blog entries for symblog</p>
        {% endfor %}
    </div>
</div>
