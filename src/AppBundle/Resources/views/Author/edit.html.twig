{% extends 'AppBundle::layout.html.twig' %}

{% block main %}
    <main class="blog edit-author">

        <div class="container">

            <div class="row margin-top">

                <h2 class="title">Edit Author</h2>

                <div class="col-xs-12 col-md-6 col-md-offset-3">

                    {{ form_start(edit_form) }}
                    {{ form_errors(edit_form) }}

                    <div class="form-group">
                        {{ form_errors(edit_form.firstName) }}
                        {{ form_widget(edit_form.firstName) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(edit_form.lastName) }}
                        {{ form_widget(edit_form.lastName) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(edit_form.gender) }}
                        {{ form_widget(edit_form.gender) }}
                    </div>

                    <button type="submit" class="btn btn-default">Submit</button>
                    {{ form_end(edit_form) }}

                </div>


            </div>

        </div>

    </main>

{% endblock main %}
