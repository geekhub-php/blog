<div class="col-md-3">
    <div class="row">
        <div class="col-md-11 col-md-offset-1 side">
            <div class="row">
                <div class="list-group">
                    <li class="list-group-item active">Categories</li>
                    {% for category in categories %}
                       <a href="/category/{{ category.id }}" class="list-group-item">{{ category.name }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% if  is_granted("ROLE_ADMIN") %}
        <div class="col-md-11 col-md-offset-1 side">
            <div class="row">
                <div class="list-group">
                    <li class="list-group-item active">Admin panel</li>
                        <a href="/admin/posts" class="list-group-item">Not approved posts</a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
