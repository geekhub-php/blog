        <div class="container">
            <div class="logo">
                <a href="{{ path("blog") }}">
                    <img src="{{ asset('img/logo.svg') }}" alt="">
                </a>
            </div>
            <nav>
                <ul>
                    <li>
                        <a href="{{ path("blog") }}">Home</a>
                    </li>
                    <li>
                        <a href="#">Blog</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
{% endblock header %}

{% block footer %}
