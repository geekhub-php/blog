{% extends 'AppBundle::base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block breadcrump %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li class="active">{{ category.name }}</li>
    </ol>
{% endblock %}
 {% block content %}
     <div class="container-fluid">
         <div class="row">
             <div class="col-md-9">
                 {% if status == 'edited' %}
                     <div class="alert alert-success alert-dismissable">
                         <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                         <strong>Success!</strong> Your category was edited!
                     </div>
                 {% elseif status == 'created' %}
                     <div class="alert alert-success alert-dismissable">
                         <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                         <strong>Success!</strong> Category was created!
                     </div>
                 {% endif %}
                 {% for item in posts %}
                     <div class="row">
                         <div class="panel panel-default">
                             <div class="panel-heading panelHeading">
                                 <h3 class="panel-title"><a href="/post/{{ item.id }}">{{ item.title }}</a><span style="float: right">{{ item.createdAt|date('H:i d-m-Y') }}</span></h3>
                             </div>
                             <div class="panel-body">
                                 {{ item.text }}
                             </div>
                             <div class="panel-footer">
                                 <span><strong>Author: </strong><a href="/user/{{ item.user.id }}">{{ item.user.firstName }} {{ item.user.lastName }}</a></span>
                                 <span style="float: right"><strong>Category: </strong><a href="/category/{{ item.category.id }}">{{ item.category.name }}</a></span>
                             </div>
                         </div>
                     </div>
                 {% endfor %}
                 <div class="col-md-offset-4">
                     {{ knp_pagination_render(posts) }}
                 </div>
                 {% if posts|length  == 0  %}
                     <p>There are no posts!</p>
                 {% endif %}
             </div>
             {{ include('AppBundle::sidebar.html.twig') }}
         </div>
     </div>
 {% endblock %}