{% extends 'AppBundle::base.html.twig' %}

{% block title %}Welcome to main page!{% endblock %}

 {% block content %}
     <div class="container-fluid">
         <div class="row">
             <div class="col-md-9">
                 <div class="row">
                     <div class="panel panel-default">
                         <div class="panel-heading">
                             <h3 class="panel-title">User list</h3>
                         </div>
                         <div class="panel-body">
                             <table class="table">
                                 <thead>
                                 <tr>
                                     <th>#</th>
                                     <th>Username</th>
                                     <th>Firstname</th>
                                     <th>Lastname</th>
                                     <th>Email</th>
                                 </tr>
                                 </thead>
                                <tbody>
                             {% for user in users %}
                             <tr>
                                 <td><a href="/user/{{ user.id }}">{{ user.id }}</a></td>
                                 <td>{{ user.username }}</td>
                                 <td>{{ user.firstName }}</td>
                                 <td>{{ user.lastName }}</td>
                                 <td>{{ user.email }}</td>
                             </tr>
                             {% endfor %}
                                 </tbody>
                             </table>
                         </div>
                     </div>
                 </div>
             </div>
             {{ include('AppBundle::sidebar.html.twig') }}
         </div>
     </div>
 {% endblock %}