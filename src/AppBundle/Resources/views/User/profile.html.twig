                                    {#<span class="label label-success">Coding</span>#}
                                    {#<span class="label label-info">Javascript</span>#}
                                    {#<span class="label label-warning">PHP</span>#}
                                    {#<span class="label label-primary">Node.js</span>#}
                                    {#</p>#}

                                    {#<hr>#}

                                    {#<strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>#}

                                    {#<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>#}
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-9">
                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="{{ 'user_profile_page' in app.request.get('_route') ? 'active' : '' }}"><a href="{{ path('user_profile_page') }}">
                                            Posts <span class="label label-primary">{{ app.user.posts | length }}</span>
                                        </a></li>
                                    <li class="{{ 'user_comments' in app.request.get('_route') ? 'active' : '' }}"><a href="{{ path('user_comments') }}" >
                                            Comments <span class="label label-primary">{{ app.user.comments | length }}</span>
                                        </a></li>
                                    <li class="{{ 'user_update_profile' in app.request.get('_route') ? 'active' : '' }}"><a href="{{ path('user_update_profile') }}">Update</a></li>
                                </ul>

                                <div class="tab-content">

                                    <div class="{{ 'user_profile_page' in app.request.get('_route') ? 'active' : '' }} tab-pane" id="posts">
                                        {% block posts %}
                                        {% endblock %}
                                    </div>

                                    <div class="{{ 'user_comments' in app.request.get('_route') ? 'active' : '' }} tab-pane" id="comments">
                                        {% block comments %}
                                        {% endblock %}
                                    </div>

                                    <div class="{{ 'user_update_profile' in app.request.get('_route') ? 'active' : '' }} tab-pane" id="update">
                                        {% block update %}
                                        {% endblock %}
                                    </div>


                                    <!-- /.tab-pane -->
                                </div>
                                <!-- /.tab-content -->
                            </div>
                            <!-- /.nav-tabs-custom -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                </section>
                <!-- /.content -->
            </div>
        </div>
    </div>
