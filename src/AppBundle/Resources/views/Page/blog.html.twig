{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
   {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/blog.css') }}">
{% endblock stylesheets %}

{% block main %}

    <main class="blog">

        <!--  Blog posts  -->
        <div class="container">
            <div class="row relative">
                <div class="blog-posts col-xs-12 col-sm-12 col-md-8">
                    <h2 class="h2">Blog</h2>

                    {% for i in 0..4 %}
                        <div class="post-single">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6">
                                    <a href="{{ path('single_post', {'id': 1}) }}"><img src="/img/img.jpg"  alt=""/></a>
                                </div>
                                <div class="col-xs-12 col-sm-6">
                                    <h3>
                                        <a href="#">Press your ashes into vinyl when you die.</a>
                                    </h3>
                                    <div class="text">
                                        <p>Scattering ashes can provide closure to relatives when someone dies. Jason Leach wanted people to be able to be able remember loved ones in another way; by pressing their ashes into a vinyl.  &nbsp; &#8220;Live on beyond the groove&#8221; is the slogan of Andvinyly which allows you turn your deceased loved ones ashes into vinyl.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}


                    <div class="pagination"></div>
                </div>

                <!-- Sidebar -->
                <div class="static col-xs-12 col-sm-12 col-md-4">
                    <div class="sidebar">

                    </div>
                </div>
                <!-- /Sidebar -->
            </div>
        </div>
        <!--  /Blog posts  -->



    </main>

{% endblock main %}