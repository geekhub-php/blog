{% extends 'AppBundle:Blog:layout.html.twig' %}

{% block stylesheets %}
    <style>
        img{
            width: 100%;
        }
    </style>
{% endblock %}

{% block main_column %}
    {% for post in posts %}
        <div class="col-lg-12">
            <div class="col-lg-3">
                <img src="{{ post.image }}">
            </div>
            <a href="{{ path('single_post', {'slug':post.slug }) }}">
                <h3>
                    {{ post.title }}
                </h3>
            </a>

            <span>
                {{ post.content | slice(0, 250) ~ "..." }}
            </span>
        </div>
    {% endfor %}
    <ul class="pager">
        {{ knp_pagination_render(posts) }}
    </ul>
{% endblock %}

