{% extends 'AppBundle:Blog:layout.html.twig' %}

{% block stylesheets %}
    <style>
        img{
            width: 100%;
        }
    </style>
{% endblock %}

{% block main_column %}
    {% for post in posts %}
        <div class="col-lg-12">
            <div class="col-lg-3">
                <img src="{{ post.image }}">
            </div>

            <h3>
                {{ loop.index }}. {{ post.title }}
            </h3>
            <span>
                {{ post.description }}
            </span>
        </div>
    {% endfor %}
{% endblock %}

