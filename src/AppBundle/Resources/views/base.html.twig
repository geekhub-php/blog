<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# Bootstrap #}
        <link href="{{ asset("public/css/bootstrap.min.css") }}" rel="stylesheet" />
        <link href="{{ asset("public/css/bootstrap-theme.min.css") }}" rel="stylesheet" />

        {# Custom styles #}
        {% block stylesheets %}
            <link href="{{ asset("public/css/styles.css") }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>
    <body>
        <div class="container">
            <header id="header">
                {{ include("AppBundle:includes:header.html.twig") }}
            </header>
            <nav>
                {{ include("AppBundle:includes:menu.html.twig") }}
            </nav>
            {% block body %}
                {# Content displaying here #}
            {% endblock %}
            <footer id="footer">
                {{ include("AppBundle:includes:footer.html.twig") }}
            </footer>
        </div>

        {# jQuery #}
        <script src="{{ asset("public/js/bootstrap.min.js") }}"></script>

        {# Custom javascripts #}
        {% block javascripts %}
            <script src="{{ asset("public/js/functions.js") }}"></script>
        {% endblock %}
    </body>
</html>
