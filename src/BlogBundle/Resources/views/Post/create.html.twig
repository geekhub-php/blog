{% extends 'BlogBundle::base.html.twig' %}

{% block title %}{% if status == 'create' %}Creating{% else %}Editing{% endif %} post{% endblock %}

{% block body %}
<div class="container-fluid mainWrapper">
    <div class="row">
        <div class="col-md-10 col-md-offset-1 myClass">
            <h1>Ugly Blog</h1>
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="{{ path('homepage') }}">Home<span class="sr-only">(current)</span></a></li>
                                <li><a href="#">Test</a></li>
                            </ul>
                            <form class="navbar-form navbar-left">
                            <ul class="nav navbar-nav navbar-right">

                            </ul>
                        </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="#">Post</a></li>
                <li class="active">{% if status == 'create' %}Create{% else %}Edit{% endif %}</li>
            </ol>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-9">
                        <div class="row">
                            {% if status == 'create' %}
                            <form method="POST" action="/post/create">
                                <input type="hidden" name="_method" value="PUT">
                                {% elseif status == 'edit' %}
                                    <form method="POST" action="/post/{{ id }}/edit">
                                        <input type="hidden" name="_method" value="PATCH">
                                        {% endif %}
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input type="text" class="form-control" id="title" placeholder="Title" name="title">
                                </div>
                                <div class="form-group">
                                    <label for="text">Text</label>
                                    <textarea class="form-control" rows="3" id="text" name="text"></textarea>
                                </div>
                                <button type="submit" class="btn btn-default">Submit</button>
                                </form>
                        </div>
                    </div>
                    {{ include('BlogBundle::sidebar.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



